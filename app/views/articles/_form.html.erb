<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </p>

  <p>
    <%= image_tag(@article.main_image) if @article.main_image.attached? %><br />
    <%= f.label :main_image, "Attach an Image"  %><br />
    <%= f.file_field :main_image %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
